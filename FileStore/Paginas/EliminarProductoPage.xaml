<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FileStore.Paginas.EliminarProductoPage"
             Title="Eliminar Producto">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label Text="ID Del Producto A Eliminar" FontSize="Medium" VerticalOptions="Center" />
        <Entry x:Name="EntryIdProducto" Placeholder="Ingrese El ID Del Producto" VerticalOptions="Center"/>

        <Button Text="Eliminar" Clicked="Button_Clicked" HorizontalOptions="Center"  VerticalOptions="CenterAndExpand" />

    </VerticalStackLayout>
</ContentPage>