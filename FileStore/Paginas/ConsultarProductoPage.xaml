<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FileStore.Paginas.ConsultarProductoPage"
             Title="Consultar Productos">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        
        <Image x:Name="Img" HeightRequest="100" />

        <Label Text="Código del producto"/>
        <Entry x:Name="EntryCodigoProducto"/>

        <Label Text="Título del producto"/>
        <Entry x:Name="EntryTituloProducto"/>

        <Label Text="Precio del producto"/>
        <Entry x:Name="EntryPrecioProducto"/>

        <Label Text="Categoría del producto"/>
        <Entry x:Name="EntryCategoriaProducto"/>

        <Label Text="Descripción del producto"/>
        <Editor  HeightRequest="80" x:Name="EntryDescripcionProducto"/>

        <Button Text="Consultar" Clicked="Button_Clicked" />
    </VerticalStackLayout>
</ContentPage>